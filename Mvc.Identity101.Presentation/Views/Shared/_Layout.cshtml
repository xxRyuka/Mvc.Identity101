<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Identity</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <style>
        :root {
            --primary-rgb: 99, 102, 241;
            --primary-dark-rgb: 79, 70, 229;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg,
            rgba(23, 24, 32, 0.95) 0%,
            rgba(15, 16, 22, 0.95) 100%
            ) fixed;
            color: #fff;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 25% 61%,
            hsla(236, 94%, 81%, 0.1) 0%,
            transparent 55%
            ),
            radial-gradient(circle at 42% 84%,
                hsla(0, 0%, 29%, 0.1) 0%,
                transparent 55%
            ),
            radial-gradient(circle at 13% 58%,
                hsla(302, 100%, 66%, 0.05) 0%,
                transparent 45%
            ),
            radial-gradient(circle at 53% 90%,
                hsla(163, 100%, 66%, 0.05) 0%,
                transparent 45%
            );
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            z-index: -1;
            pointer-events: none;
        }

        .navbar {
            background: rgba(23, 24, 32, 0.8);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .navbar-brand {
            color: #fff;
            font-weight: 600;
        }

        .navbar-brand:hover {
            color: rgba(255, 255, 255, 0.9);
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.7);
            transition: all 0.3s ease;
        }

        .nav-link:hover, .nav-link.active {
            color: #fff;
        }

        .footer {
            background: rgba(23, 24, 32, 0.8);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.7);
            padding: 1rem 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .footer a {
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer a:hover {
            color: #fff;
        }

        main {
            margin-bottom: 5rem;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg fixed-top">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
            <i style="color:gold" class="bi bi-boxes me-2"></i>Identity
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <i class="bi bi-list text-light"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                @* <li class="nav-item"> *@
                @*     <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Welcome" ? "active" : "")" *@
                @*        asp-controller="Home" asp-action="Home"> *@
                @*         <i class="bi bi-currency-exchange me-2"></i>www *@
                @*     </a> *@
                @* </li> *@
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house me-2"></i>Ana Sayfa
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "PublicList" ? "active" : "")"
                       asp-controller="Home" asp-action="PublicList">
                        <i class="bi bi-grid me-2"></i>Liste
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Exchange" ? "active" : "")"
                       asp-controller="Home" asp-action="Exchange">
                        <i class="bi bi-currency-exchange me-2"></i>Finans
                    </a>
                </li>

            </ul>
            <partial name="_NavbarLogin"/>
        </div>
    </div>
</nav>

<div class="container" style="margin-top: 5rem;">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="footer">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-center text-md-start">
                <span>&copy; @DateTime.Now.Year Identity</span>
            </div>
            <div class="col-md-6 text-center text-md-end">
                <a asp-controller="Home" asp-action="Privacy" class="text-muted me-3">Gizlilik</a>
                <a href="#" class="text-muted">Destek</a>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
