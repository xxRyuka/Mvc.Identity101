@using System.Security.Claims
@{
    if (!User.Identity.IsAuthenticated)
    {
        <!-- Giriş yapmamış kullanıcı -->
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
            <li class="nav-item me-lg-3">
                <a class="btn-auth-secondary" asp-controller="Home" asp-action="SignUp">
                    <i class="fas fa-user-plus"></i>
                    Kayıt Ol
                </a>
            </li>
            <li class="nav-item">
                <a class="btn-auth-primary" asp-controller="Home" asp-action="SignIn">
                    <i class="fas fa-sign-in-alt"></i>
                    Giriş Yap
                </a>
            </li>
        </ul>
    }
    else
    {
        <!-- Giriş yapmış kullanıcı -->
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
            
            <!-- Admin Badge -->
            @if (User.HasClaim(x => x.Type == ClaimTypes.Role && x.Value == "god"))
            {
                <li class="nav-item me-lg-3">
                    <a class="admin-badge-premium" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-crown"></i>
                        Admin Panel
                    </a>
                </li>
            }
            
            <!-- Kullanıcı Dropdown -->
            <li class="nav-item dropdown user-dropdown">
                <a class="nav-link dropdown-toggle p-0" href="#" role="button" 
                   data-bs-toggle="dropdown" aria-expanded="false" 
                   style="border: none; background: none;">
                    <div class="d-flex align-items-center gap-2">
                        <div class="user-avatar-premium">
                            @User.Identity.Name?.Substring(0, 1).ToUpper()
                        </div>
                        <div class="d-none d-lg-block text-start">
                            <div class="fw-semibold text-white" style="font-size: 0.9rem; line-height: 1.2;">
                                @User.Identity.Name
                            </div>
                            <div class="text-muted small" style="font-size: 0.75rem; line-height: 1;">
                                Online
                            </div>
                        </div>
                    </div>
                </a>
                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-premium">
                    <li>
                        <a class="dropdown-item-premium" asp-controller="Member" asp-action="Index">
                            <i class="fas fa-user text-blue-400"></i>
                            <div>
                                <div class="fw-medium">Profilim</div>
                                <small class="text-muted">Profil ayarlarını yönet</small>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item-premium" href="#">
                            <i class="fas fa-cog text-gray-400"></i>
                            <div>
                                <div class="fw-medium">Hesap Ayarları</div>
                                <small class="text-muted">Güvenlik ve tercihler</small>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item-premium" href="#">
                            <i class="fas fa-bell text-yellow-400"></i>
                            <div>
                                <div class="fw-medium">Bildirimler</div>
                                <small class="text-muted">Bildirim ayarlarını düzenle</small>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item-premium" href="#">
                            <i class="fas fa-question-circle text-green-400"></i>
                            <div>
                                <div class="fw-medium">Yardım & Destek</div>
                                <small class="text-muted">SSS ve iletişim</small>
                            </div>
                        </a>
                    </li>
                    <li><hr class="dropdown-divider" style="border-color: rgba(148, 163, 184, 0.2); margin: 0.5rem 0;"></li>
                    <li>
                        <a class="dropdown-item-premium danger" 
                           asp-controller="Member" asp-route-returnURL="/Home/SignIn" asp-action="SignOut">
                            <i class="fas fa-sign-out-alt"></i>
                            <div>
                                <div class="fw-medium">Çıkış Yap</div>
                                <small class="text-muted">Oturumu sonlandır</small>
                            </div>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    }
}