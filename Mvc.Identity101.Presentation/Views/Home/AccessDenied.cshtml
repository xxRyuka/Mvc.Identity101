@{
    ViewBag.Title = "Yetkisiz Erişim";
    Layout = "_Layout";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 150px);">
    <div class="glass-card p-5" style="max-width: 500px;">
        <div class="text-center">
            <div class="position-relative mb-4">
                <div class="position-absolute top-50 start-50 translate-middle" 
                     style="filter: blur(30px); opacity: 0.5; z-index: 0;">
                    <i class="bi bi-shield-lock text-danger" style="font-size: 8rem;"></i>
                </div>
                <div class="position-relative" style="z-index: 1;">
                    <i class="bi bi-shield-lock text-danger" style="font-size: 5rem;"></i>
                </div>
            </div>
            
            <h1 class="display-4 fw-bold mb-3" style="background: linear-gradient(45deg, #ff6b6b, #d32f2f); 
                                                     -webkit-background-clip: text; 
                                                     -webkit-text-fill-color: transparent;">
                403
            </h1>
            
            <h2 class="h4 mb-4" style="color: var(--text);">Erişim Reddedildi</h2>
            
            <p class="text-muted mb-4">
                @ViewBag.Reason ---
            </p>

            <div class="d-flex gap-3 justify-content-center">
                <a href="javascript:history.back()" class="btn btn-outline-primary px-4">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
                <a href="/" class="btn btn-primary px-4">
                    <i class="bi bi-house me-2"></i>Ana Sayfa
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .glass-card {
        animation: fadeInUp 0.5s ease-out;
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
