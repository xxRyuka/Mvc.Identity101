@model Mvc.Identity101.Data.Dto.SignInDto

@{
    ViewBag.Title = "Giriş Yap";
    Layout = "_Layout";
}

<h2 class="text-center my-4">Giriş Yap</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        @TempData["Error"]
    </div>
}

<form asp-route-returnURL="@Context.Request.Query["returnURL"]" asp-action="SignIn" method="post" class="mx-auto" style="max-width: 500px;">
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-posta</label>
        <input value="furkanryuka739@gmail.com" asp-for="Email" class="form-control" placeholder="email@example.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Şifre</label>
        <input value="Ridvan123" type="password" asp-for="Password" class="form-control" placeholder="Şifreniz" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="rememberMeCheck">
        <label class="form-check-label" for="rememberMeCheck">Beni Hatırla</label>
    </div>
    
    <div>
        <p>
            <a asp-controller="Home" class="text-muted" asp-action="ForgotPassword">Forgot password ?</a>
        </p>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    </div>
</form>