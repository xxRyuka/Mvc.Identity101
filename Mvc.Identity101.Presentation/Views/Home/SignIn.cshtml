@model Mvc.Identity101.Data.Dto.SignInDto

@{
ViewBag.Title = "Giriş Yap";
Layout = "_Layout";
}

<style>
    .login-container {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        color: #fff;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        background: rgba(255, 255, 255, 0.15);
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        color: #fff;
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }

    .form-label {
        color: #ccd6f6;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .btn-login {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 10px;
        padding: 12px 0;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
    }

    .form-check-input {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .form-check-input:checked {
        background: #667eea;
        border-color: #667eea;
    }

    .form-check-label {
        color: #8892b0;
    }

    .login-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 700;
    }

    .forgot-password {
        color: #64ffda;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .forgot-password:hover {
        color: #64ffda;
        text-shadow: 0 0 8px rgba(100, 255, 218, 0.5);
    }

    .alert-custom {
        background: rgba(220, 53, 69, 0.1);
        border: 1px solid rgba(220, 53, 69, 0.3);
        border-radius: 10px;
        color: #ff6b8a;
    }
</style>

<div class="row justify-content-center align-items-center min-vh-75">
    <div class="col-md-6 col-lg-5">
        <div class="login-container p-5">
            <!-- Header -->
            <div class="text-center mb-4">
                <div class="mb-3">
                    <i class="fas fa-shield-alt login-header" style="font-size: 3rem;"></i>
                </div>
                <h2 class="login-header mb-2">Hoş Geldiniz</h2>
                <p class="text-muted mb-0">Hesabınıza giriş yapın</p>
            </div>

            <!-- Error Alert -->
            @if (TempData["Error"] != null)
            {
            <div class="alert alert-custom d-flex align-items-center mb-4" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @TempData["Error"]
            </div>
            }

            <!-- Login Form -->
            <form asp-route-returnURL="@Context.Request.Query["returnURL"]" asp-action="SignIn" method="post">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-custom" })
                @Html.AntiForgeryToken()

                <!-- Email Input -->
                <div class="mb-4">
                    <label asp-for="Email" class="form-label d-flex align-items-center">
                        <i class="fas fa-envelope me-2"></i>
                        E-posta Adresi
                    </label>
                    <input value="ryuka@gmail.com" asp-for="Email" class="form-control"
                           placeholder="email@example.com" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Password Input -->
                <div class="mb-4">
                    <label asp-for="Password" class="form-label d-flex align-items-center">
                        <i class="fas fa-lock me-2"></i>
                        Şifre
                    </label>
                    <div class="position-relative">
                        <input value="Furkan123" type="password" asp-for="Password" class="form-control"
                               placeholder="Şifrenizi girin" autocomplete="current-password" id="passwordInput" />
                        <button type="button" class="btn position-absolute end-0 top-50 translate-middle-y me-2 p-0"
                                style="border: none; background: none; color: rgba(255,255,255,0.6);"
                                onclick="togglePassword()">
                            <i class="fas fa-eye" id="toggleIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="rememberMeCheck">
                        <label class="form-check-label" for="rememberMeCheck">
                            Beni hatırla
                        </label>
                    </div>
                    <a asp-controller="Home" asp-action="ForgotPassword" class="forgot-password small">
                        <i class="fas fa-key me-1"></i>
                        Şifremi unuttum
                    </a>
                </div>

                <!-- Submit Button -->
                <div class="d-grid mb-4">
                    <button type="submit" class="btn btn-login text-white">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Giriş Yap
                    </button>
                </div>

                <!-- Sign Up Link -->
                <div class="text-center">
                    <span class="text-muted">Hesabınız yok mu?</span>
                    <a asp-controller="Home" asp-action="SignUp" class="forgot-password ms-1">
                        Kayıt olun
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function togglePassword() {
        const passwordInput = document.getElementById('passwordInput');
        const toggleIcon = document.getElementById('toggleIcon');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.className = 'fas fa-eye-slash';
        } else {
            passwordInput.type = 'password';
            toggleIcon.className = 'fas fa-eye';
        }
    }
</script>