@model Mvc.Identity101.Areas.Admin.Data.Dto.AddRoleDto

@{
    ViewBag.Title = "Yeni Rol";
    Layout = "_Layout";
}

<div class="admin-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="admin-card">
                <h2 class="admin-title">
                    <i class="bi bi-shield-plus"></i>
                    Yeni Rol Ekle
                </h2>

                <form asp-action="AddRole" method="post">
                    <div class="admin-form-group">
                        <label asp-for="Name" class="form-label">Rol Adı</label>
                        <input asp-for="Name" class="admin-form-control" placeholder="Rol adını girin"/>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left me-2"></i>Geri Dön
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-2"></i>Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
