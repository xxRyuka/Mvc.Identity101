@using Microsoft.AspNetCore.Razor.Language
@using Microsoft.CodeAnalysis.Elfie.Model.Map
@model List<Mvc.Identity101.Areas.Admin.Data.Dto.AssignRoleDto>

@{
    ViewBag.Title = "Rol Ata";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="mb-4 text-center">
        <h2 class="fw-bold">Kullanıcıya Rol Ata</h2>
        <p class="text-muted fs-5">Kullanıcı: <span class="text-primary fw-semibold">@ViewBag.UserName</span></p>
    </div>

    <form method="post"
          asp-action="AssignRole"
          asp-controller="Role"
          asp-route-UserId="@ViewBag.UserId"
          asp-area="Admin">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @for (int i = 0; i < Model.Count; i++)
            {
                var checkboxId = $"role_{i}";
                <div class="col">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body d-flex align-items-center">
                            <div class="form-check">
                                <input type="checkbox"
                                       class="form-check-input"
                                       asp-for="@Model[i].Exist"
                                       id="@checkboxId" />

                                <label class="form-check-label fs-6 fw-semibold ms-2 text-black" for="@checkboxId">
                                    @Model[i].Name
                                </label>

                                <input type="hidden" asp-for="@Model[i].Id" />
                                <input type="hidden" asp-for="@Model[i].Name" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-5 d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-warning px-4 py-2">
                <i class="bi bi-check-circle me-1"></i> Rolleri Kaydet
            </button>
            <a asp-action="UserList" asp-controller="Home" asp-area="Admin" class="btn btn-outline-secondary px-4 py-2">
                 Vazgeç
            </a>
        </div>
    </form>
</div>
