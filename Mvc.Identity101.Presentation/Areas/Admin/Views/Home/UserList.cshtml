@model List<Mvc.Identity101.Areas.Admin.Data.Dto.UserListDto>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>User List admin areas</h2>

<h1> hot 1 reload's  2a1 </h1>

<table class="table text-white">
    <thead>
    <tr>
        <th  scope="col">id</th>
        <th scope="col">User Name</th>
        <th scope="col">Email</th>
        <th scope="col">photo</th>
        
    </tr>
    </thead>
    <tbody>
    
    @foreach (var user in Model)
    {
        <tr>
            <th scope="row">@user.Id</th>
            <td>@user.UserName</td>
            <td>@user.Email </td>
            <td>
                <div style="width: 100px; height: 100px; border-radius: 50%; overflow: hidden; display: flex; align-items: center; justify-content: center; border: 2px solid #86b7fe;">
                    <img src="@user.imgPath" style="width: 100%; height: 100%; object-fit: cover;" alt="Profile" />
                </div>
            </td>

        </tr>
    }
    
    </tbody>
</table>
