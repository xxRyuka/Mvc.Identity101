@{
    ViewBag.Title = "Yönetim Paneli";
    Layout = "_Layout";
}

<div class="admin-dashboard">
    <div class="dashboard-welcome">
        <div class="welcome-content">
            <h1 class="welcome-title">
                <i style="color: yellow" class="bi bi-grid-1x2-fill me-2"></i>
                Yönetim Paneli
            </h1>
            <p class="welcome-subtitle">Sistem istatistiklerine ve yönetim araçlarına buradan erişebilirsiniz</p>
        </div>
    </div>

    <div class="dashboard-stats">
        <div class="stat-card user-card">
            <div class="stat-card-body">
                <div class="stat-card-info">
                    <div class="stat-card-header">
                        <div class="stat-icon-wrapper">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <h3 class="stat-title">Kullanıcılar</h3>
                    </div>
                    <div class="stat-value-wrapper">
                        <span class="stat-value">@ViewBag.UserCount</span>
                        <span class="stat-label">Toplam Kayıtlı Kullanıcı</span>
                    </div>
                </div>
                <div class="stat-card-footer">
                    <a asp-controller="Home"  asp-area="Admin" asp-action="UserList" class="stat-link">
                        <span>Kullanıcıları Yönet</span>
                        <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="stat-card role-card">
            <div class="stat-card-body">
                <div class="stat-card-info">
                    <div class="stat-card-header">
                        <div class="stat-icon-wrapper">
                            <i class="bi bi-shield-fill"></i>
                        </div>
                        <h3 class="stat-title">Roller</h3>
                    </div>
                    <div class="stat-value-wrapper">
                        <span class="stat-value">@ViewBag.RoleCount</span>
                        <span class="stat-label">Toplam Sistem Rolü</span>
                    </div>
                </div>
                <div class="stat-card-footer">
                    <a asp-controller="Role" asp-action="Index" class="stat-link">
                        <span>Rolleri Yönet</span>
                        <i class="bi bi-arrow-right-short"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.admin-dashboard {
    padding: 1.5rem;
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
}

.admin-dashboard::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(17, 17, 17, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    z-index: -1;
}

.dashboard-welcome {
    background: linear-gradient(135deg, rgba(var(--primary-rgb), 0.95) 0%, rgba(var(--primary-dark-rgb), 0.95) 100%);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.welcome-content {
    color: white;
}

.welcome-title {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
}

.welcome-subtitle {
    font-size: 1rem;
    opacity: 0.9;
    margin: 0;
}

.dashboard-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
}

.stat-card {
    background: rgba(25, 25, 25, 0.8);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    background: rgba(30, 30, 30, 0.9);
}

.stat-card-body {
    padding: 1.5rem;
}

.stat-card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.stat-icon-wrapper {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: white;
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
}

.user-card .stat-icon-wrapper {
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.9) 0%, rgba(79, 70, 229, 0.9) 100%);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.role-card .stat-icon-wrapper {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.9) 0%, rgba(217, 119, 6, 0.9) 100%);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.stat-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
    color: rgba(255, 255, 255, 0.95);
}

.stat-value-wrapper {
    margin-bottom: 1.5rem;
}

.stat-value {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 0.25rem;
}

.stat-label {
    display: block;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
}

.stat-card-footer {
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.stat-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-decoration: none;
    color: rgba(var(--primary-rgb), 0.9);
    font-weight: 500;
    transition: all 0.2s ease;
}

.stat-link:hover {
    color: rgb(var(--primary-rgb));
}

.stat-link i {
    font-size: 1.5rem;
    transition: transform 0.2s ease;
}

.stat-link:hover i {
    transform: translateX(4px);
}

@@media (max-width: 768px) {
    .admin-dashboard {
        padding: 1rem;
    }

    .dashboard-welcome {
        padding: 1.5rem;
    }

    .welcome-title {
        font-size: 1.5rem;
    }

    .stat-value {
        font-size: 2rem;
    }
}
</style>
